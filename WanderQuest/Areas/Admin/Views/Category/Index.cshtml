@model List<Category>

<div class="table-container">
    <div class="buttons-table-product">
        <a class="nav-link product-go-back" asp-controller="dashboard" asp-action="index" asp-area="admin"><button class="btn-back">Go Back</button></a>
        <a class="nav-link create-product" asp-controller="category" asp-action="create" asp-area="admin"><button class="btn-success create-product-btn">Create</button></a>
    </div>
    <h2>Categories</h2>
    <table class="table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Settings</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Name</td>
                    <td>
                        <a asp-area="admin" asp-controller="category" asp-action="details" asp-route-id="@Model[i].Id">
                            <button class="btn-details">Details</button>
                        </a>
                        <a asp-area="admin" asp-controller="category" asp-action="update" asp-route-id="@Model[i].Id">
                            <button class="btn-update">Update</button>
                        </a>
                        <a asp-area="admin" asp-controller="category" asp-action="delete" asp-route-id="@Model[i].Id">
                        <button class="btn-delete">Delete</button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>