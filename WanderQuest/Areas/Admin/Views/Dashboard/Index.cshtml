<div class="content-section" id="forms">
    <h2>Form Elements</h2>
    <form>
        <div class="form-group">
            <label for="name">Adı:</label>
            <input type="text" id="name" name="name" placeholder="Adınızı girin">
        </div>
        <div class="form-group">
            <label for="email">E-posta:</label>
            <input type="email" id="email" name="email" placeholder="E-posta adresiniz">
        </div>
        <div class="form-group">
            <label for="password">Şifre:</label>
            <input type="password" id="password" name="password" placeholder="Şifreniz">
        </div>
        <div class="form-group">
            <label for="role">Rol:</label>
            <select id="role" name="role">
                <option value="admin">Admin</option>
                <option value="user">Kullanıcı</option>
            </select>
        </div>
        <div class="form-group">
            <label for="bio">Biyografi:</label>
            <textarea id="bio" name="bio" rows="4" placeholder="Hakkınızda bir şeyler yazın"></textarea>
        </div>
        <div class="form-group">
            <button type="submit">Gönder</button>
        </div>
    </form>
</div>
