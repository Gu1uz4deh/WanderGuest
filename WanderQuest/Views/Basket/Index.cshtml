@model List<BasketVM>

@{
    decimal totalPrice = ViewBag.TotalPrice;
}

<table id="shopping-cart">
    <thead>
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Title</th>
            <th>Price</th>
            <th>Category</th>
            <th>Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@i</td>
                <td><img src="~/assets/uploads/products/@Model[i].ImageUrl" alt="@Model[i].Title"></td>
                <td>@Model[i].Title</td>
                <td>@Model[i].Price</td>
                <td>@Model[i].Category</td>
                <td>@Model[i].Count</td>
                <td><a href="#">Delete</a> | <a href="#">Save for later</a></td>
            </tr>
        }
    </tbody>
</table>
<div id="subtotal">
    <p><span>Subtotal (</span><span id="wishlistCount" class="basketCount"></span><span> items): $@totalPrice           .</span></p>
</div>