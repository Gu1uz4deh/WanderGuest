
<!-- Hero Slider -->
@await Component.InvokeAsync("Sliders")

<!-- Packages Section -->
<section class="packages" id="packages">
    <h2>Our Travel Packages</h2>
    @await Component.InvokeAsync("Categories")
    <div id="products" class="package-grid">
        @await Component.InvokeAsync("Products", new { take = 4 })
    </div>

    <div id="moreProductButton" class="more-products">
        <a asp-area="" asp-controller="products" asp-action="index" class="nav-link">
            <button class="button-more">More...</button>
        </a>
    </div>
</section>

<!-- Feature Section -->
<section class="feature-section">
    <div class="feature-content">
        <h2>Why Choose WanderQuest?</h2>
        <p>We curate personalized experiences, ensuring unforgettable journeys.</p>
    </div>
</section>

<!-- About / Team Section -->
@await Component.InvokeAsync("TeamMembers")

<!-- Testimonials -->
<section class="testimonials">
    <h2>What Our Travelers Say</h2>
    <div class="testimonial-slider" id="testimonialSlider">
        <div class="testimonial active">
            <p>"An amazing experience! The mountains tour was breathtaking and well organized."</p>
            <h4>- Emily R.</h4>
        </div>
        <div class="testimonial">
            <p>"Beach getaway was perfect. Highly recommend WanderQuest for seamless planning."</p>
            <h4>- Michael S.</h4>
        </div>
        <div class="testimonial">
            <p>"City tour opened my eyes to hidden gems. Fantastic guides!"</p>
            <h4>- Sara L.</h4>
        </div>
    </div>
</section>

<!-- Newsletter -->
<section class="newsletter">
    <h2>Subscribe for Exclusive Deals</h2>
    <div class="newsletter-form">
        <input type="email" id="emailNewsletter" placeholder="Enter your email">
        <button id="subscribeBtn">Subscribe</button>
    </div>
</section>

<!-- Blog Section -->
<section class="blog" id="blog">
    <h2>From Our Blog</h2>
    <div class="blog-grid" id="blogGrid">
        <div class="blog-card">
            <img src="~/assets/others/mountain-landscape-3840x2160-19802.jpg" alt="Top 10 Mountain Trails">
            <div class="blog-card-content">
                <h3>Top 10 Mountain Trails</h3>
                <p>01 June 2025</p>
                <a href="#">Read More</a>
            </div>
        </div> 
        <div class="blog-card">
            <img src="~/assets/others/tropical-beach-3840x2160-14811.jpg" alt="Beach Safety Tips">
            <div class="blog-card-content">
                <h3>Beach Safety Tips</h3>
                <p>15 May 2025</p>
                <a href="#">Read More</a>
            </div>
        </div>
        <div class="blog-card">
            <img src="~/assets/others/chicago-downtown-3840x2160-21348.jpg" alt="City Travel Hacks">
            <div class="blog-card-content">
                <h3>City Travel Hacks</h3>
                <p>20 April 2025</p>
                <a href="#">Read More</a>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact" id="contact">
    <h2>Contact Us</h2>
    <div class="contact-container">
        <form id="contactForm">
            <input type="text" id="name" placeholder="Your Name" required>
            <input type="email" id="email" placeholder="Your Email" required>
            <textarea id="message" placeholder="Your Message" rows="5" required></textarea>
            <button type="submit">Send Message</button>
        </form>
        <div class="map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.019845371635!2d-122.41941548468253!3d37.77492927975971!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8085808c2f8f7d1f%3A0x4a0c1e0f9b7d1e0!2sSan+Francisco!5e0!3m2!1sen!2sus!4v1610000000000!5m2!1sen!2sus" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
</section>


