@model List<BasketVM>

@{
    decimal totalPrice = ViewBag.TotalPrice;
}

<ul class="wish-items">
    @for (int i = 0; i < Model.Count; i++)
    {
        <li>
            <img src="~/assets/uploads/products/@Model[i].ImageUrl" alt="Item 1">
            <div class="wish-info">
                <span class="wish-name">@Model[i].Title</span>
                <span class="wish-qty">@Model[i].Count× $@Model[i].Price</span>
            </div>
        </li>
    }
</ul>
<div class="wish-total">Total: $@totalPrice</div>
