@model List<BasketVM>

@if(Model.Count >= 1)
{
    <table id="shopping-cart">
        <thead>
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Title</th>
                <th>Price</th>
                <th>Category</th>
                <th>Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@i</td>
                    <td><img src="~/assets/uploads/products/@Model[i].ImageUrl" alt="@Model[i].Title"></td>
                    <td>@Model[i].Title</td>
                    <td>@Model[i].Price</td>
                    <td>@Model[i].Category</td>
                    <td>
                        <div class="wish-qty-price">
                            <button class="qty-decrease" data-product-id="@Model[i].Id">−</button>
                            <input type="number" class="wish-qty" value="@Model[i].Count" min="0" max="100" data-product-id="@Model[i].Id">
                            <button class="qty-increase" data-product-id="@Model[i].Id">+</button>
                        </div>
                    </td>
                    <td><a href="#" class="delete-button" data-product-id="@Model[i].Id">Delete</a> | <a href="#">Save for later</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div id="subtotal">
        @* <p><span>Subtotal (</span><span id="wishlistCount" class="basketCount"></span><span> items): $@totalPrice           .</span></p> *@
        <p><span>Subtotal (</span><span class="basketTotalCount"></span><span> items): $<span class="basketTotalPrice"></span> .</span></p>
    </div>
}
else
{
    <p style="color: black;">No products in the cart.</p>
}