@model List<Category>

<div class="filters">
    <button data-filter="all" class="filter-btn active" data-category-id="0">All</button>
    @for (int i = 0; i < Model.Count; i++)
    {
        <button data-filter="@Model[i].Name.ToLower()" class="filter-btn" data-category-id="@Model[i].Id">@Model[i].Name</button>
    }

</div>