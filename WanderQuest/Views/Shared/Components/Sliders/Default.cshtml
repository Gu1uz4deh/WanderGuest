@model List<Slider>

<section class="hero" id="home">
    <div class="slider" id="heroSlider">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="slide @(i == 0 ? "active" : "")" style="background-image:url('@Url.Content("~/assets/uploads/sliders/" + Model[i].SliderImages[0].Image.Name)')">
                <div class="slide-content">
                    <h1>@Model[i].Title</h1>
                    <p>@Model[i].Description</p>
                </div>
            </div>
        }
        <button class="prev" id="prevBtn">❮</button>
        <button class="next" id="nextBtn">❯</button>
    </div>
</section>